<% if flash[:error] %>
<% flash[:error].each do |error| %>
    <%= error %>
<% end %>
<% end %>

<h1>Edit an existing passenger</h1>
<br>
<%= form_for @passenger do |f| %>
    Passenger name: <%= f.text_field :name %><br>
    Passenger age: <%= f.number_field :age %><br>
    <%= f.submit "Edit passenger" %><br>
    <% end %>